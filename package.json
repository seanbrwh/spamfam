{
  "name": "spamfam",
  "scripts": {
    "dev": "concurrently -c 'red' -n w: yarn:dev:*",
    "dev:server": "cross-env LOCAL=true tsc-watch --p \"./tsconfig.server.json\" --onSuccess \"nodemon ./dist/index.js\" ",
    "dev:client": "webpack-dev-server --mode development --env.LOCAL=true --env.PUBLIC_PATH=http://localhost:3010/",
    "dev:tasks": "gulp",
    "build": "concurrently -c 'blue' -n w: npm:build:*",
    "build:tasks": "gulp",
    "build:server": "tsc --p \"./tsconfig.server.json\"",
    "build:client": "webpack --mode production --env.LOCAL=false",
    "start": "npm run build && npx pm2 start ecosystem.config.js --no-daemon",
    "test": "mocha --exit ./dist/__test/**/*.js",
    "script": "cd src/scripts && ts-node"
  },
  "devDependencies": {
    "@babel/core": "^7.10.4",
    "@babel/plugin-transform-runtime": "^7.10.4",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@types/compression": "^1.7.0",
    "@types/dotenv": "^8.2.0",
    "@types/ejs": "^3.0.4",
    "@types/express": "^4.17.6",
    "@types/jest": "^26.0.3",
    "@types/mocha": "^7.0.2",
    "@types/mongoose": "^5.7.29",
    "@types/morgan": "^1.9.1",
    "@types/node": "^14.0.14",
    "@types/nodemon": "^1.19.0",
    "@types/react": "^16.9.41",
    "@types/react-dom": "^16.9.8",
    "babel-loader": "^8.1.0",
    "clean-webpack-plugin": "^3.0.0",
    "concurrently": "^5.2.0",
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "file-loader": "^6.0.0",
    "fork-ts-checker-webpack-plugin": "^5.0.6",
    "jest": "^26.1.0",
    "mocha": "^8.0.1",
    "nodemon": "^2.0.4",
    "pm2": "^4.4.0",
    "tsc-watch": "^4.2.9",
    "typescript": "^3.9.6",
    "webpack": "^4.43.0",
    "webpack-bundle-analyzer": "^3.8.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "webpack-manifest-plugin": "^2.2.0"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "ejs": "^3.1.3",
    "express": "^4.17.1",
    "gulp": "^4.0.2",
    "mongoose": "^5.9.21",
    "morgan": "^1.10.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  }
}
